{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SEC Get Company Filings Input",
  "description": "Input schema for getting company filings",
  "type": "object",
  "properties": {
    "company_name": {
      "type": "string",
      "description": "Company name (alternative to CIK)",
      "examples": ["Apple Inc.", "Microsoft Corporation"]
    },
    "cik": {
      "type": "string",
      "description": "Company CIK (10-digit zero-padded)",
      "pattern": "^\\d{10}$",
      "examples": ["0000320193", "0000789019"]
    },
    "form_type": {
      "type": "string",
      "description": "Form type filter (e.g., '10-K', '10-Q', '8-K', 'S-1')",
      "examples": ["10-K", "10-Q", "8-K", "S-1", "DEF 14A"]
    },
    "start_date": {
      "type": "string",
      "description": "Start date filter (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "examples": ["2023-01-01", "2024-01-01"]
    },
    "end_date": {
      "type": "string",
      "description": "End date filter (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "examples": ["2023-12-31", "2024-12-31"]
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 50,
      "description": "Maximum number of filings to return"
    }
  },
  "additionalProperties": false
}

