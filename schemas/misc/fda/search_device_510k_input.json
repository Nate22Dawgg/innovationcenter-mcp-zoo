{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FDA Search Device 510(k) Input",
  "description": "Input schema for searching FDA 510(k) device clearances",
  "type": "object",
  "properties": {
    "device_name": {
      "type": "string",
      "description": "Name of the medical device"
    },
    "applicant": {
      "type": "string",
      "description": "Applicant company name"
    },
    "contact": {
      "type": "string",
      "description": "Contact information"
    },
    "product_code": {
      "type": "string",
      "description": "FDA product code"
    },
    "clearance_type": {
      "type": "string",
      "description": "Type of 510(k) clearance"
    },
    "decision_date_from": {
      "type": "string",
      "pattern": "^\\d{8}$",
      "description": "Start date for decision date range (YYYYMMDD format)"
    },
    "decision_date_to": {
      "type": "string",
      "pattern": "^\\d{8}$",
      "description": "End date for decision date range (YYYYMMDD format)"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 10,
      "description": "Maximum number of results to return (1-100)"
    },
    "skip": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of results to skip for pagination"
    }
  },
  "additionalProperties": false
}

