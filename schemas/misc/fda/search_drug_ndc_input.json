{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FDA Search Drug NDC Input",
  "description": "Input schema for searching National Drug Code (NDC) directory",
  "type": "object",
  "properties": {
    "product_ndc": {
      "type": "string",
      "description": "Product NDC number"
    },
    "package_ndc": {
      "type": "string",
      "description": "Package NDC number"
    },
    "proprietary_name": {
      "type": "string",
      "description": "Proprietary/brand name"
    },
    "nonproprietary_name": {
      "type": "string",
      "description": "Nonproprietary/generic name"
    },
    "labeler_name": {
      "type": "string",
      "description": "Labeler/manufacturer name"
    },
    "dosage_form": {
      "type": "string",
      "description": "Dosage form (e.g., TABLET, CAPSULE, INJECTION)"
    },
    "route": {
      "type": "string",
      "description": "Route of administration"
    },
    "substance_name": {
      "type": "string",
      "description": "Active substance name"
    },
    "count": {
      "type": "string",
      "description": "Field to group results by for counting"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 10,
      "description": "Maximum number of results to return (1-100)"
    },
    "skip": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of results to skip for pagination"
    }
  },
  "additionalProperties": false
}

