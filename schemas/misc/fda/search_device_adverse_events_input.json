{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FDA Search Device Adverse Events Input",
  "description": "Input schema for searching FDA device adverse events (MDR - Medical Device Reporting)",
  "type": "object",
  "properties": {
    "device_name": {
      "type": "string",
      "description": "Name of the medical device"
    },
    "brand_name": {
      "type": "string",
      "description": "Brand name of the device"
    },
    "manufacturer": {
      "type": "string",
      "description": "Device manufacturer name"
    },
    "product_code": {
      "type": "string",
      "description": "FDA product code"
    },
    "event_type": {
      "type": "string",
      "description": "Type of adverse event"
    },
    "patient_sex": {
      "type": "string",
      "enum": ["F", "M"],
      "description": "Patient sex (F=Female, M=Male)"
    },
    "date_from": {
      "type": "string",
      "pattern": "^\\d{8}$",
      "description": "Start date for event date range (YYYYMMDD format)"
    },
    "date_to": {
      "type": "string",
      "pattern": "^\\d{8}$",
      "description": "End date for event date range (YYYYMMDD format)"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 10,
      "description": "Maximum number of results to return (1-100)"
    },
    "skip": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of results to skip for pagination"
    }
  },
  "additionalProperties": false
}

