{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FDA Search Drug Adverse Events Output",
  "description": "Output schema for FDA drug adverse event search results",
  "type": "object",
  "properties": {
    "search_criteria": {
      "type": "object",
      "description": "The search criteria used for this query"
    },
    "total_results": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of matching adverse event reports found"
    },
    "results_shown": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of results returned in this response"
    },
    "adverse_events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "safety_report_id": {
            "type": "string"
          },
          "report_date": {
            "type": "string"
          },
          "serious": {
            "type": "string",
            "enum": ["Yes", "No"]
          },
          "country": {
            "type": "string"
          },
          "patient": {
            "type": "object",
            "properties": {
              "age": {
                "type": ["string", "number"]
              },
              "age_unit": {
                "type": "string"
              },
              "sex": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "drugs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "brand_name": {
                  "type": "string"
                },
                "generic_name": {
                  "type": "string"
                },
                "manufacturer": {
                  "type": "string"
                },
                "indication": {
                  "type": "string"
                },
                "dosage": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "reactions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "term": {
                  "type": "string"
                },
                "outcome": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "api_usage": {
      "type": "object",
      "description": "API usage information"
    }
  },
  "required": ["search_criteria", "total_results", "results_shown", "adverse_events"],
  "additionalProperties": false
}

