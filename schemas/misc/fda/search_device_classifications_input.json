{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FDA Search Device Classifications Input",
  "description": "Input schema for searching FDA device classifications",
  "type": "object",
  "properties": {
    "device_name": {
      "type": "string",
      "description": "Name of the medical device"
    },
    "device_class": {
      "type": "string",
      "enum": ["1", "2", "3"],
      "description": "Device class (I, II, III)"
    },
    "medical_specialty": {
      "type": "string",
      "description": "Medical specialty"
    },
    "product_code": {
      "type": "string",
      "description": "FDA product code"
    },
    "regulation_number": {
      "type": "string",
      "description": "FDA regulation number"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 10,
      "description": "Maximum number of results to return (1-100)"
    },
    "skip": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of results to skip for pagination"
    }
  },
  "additionalProperties": false
}

