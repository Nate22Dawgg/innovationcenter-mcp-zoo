{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FDA Search Drug Shortages Input",
  "description": "Input schema for querying current drug shortages reported to FDA",
  "type": "object",
  "properties": {
    "product_name": {
      "type": "string",
      "description": "Product name"
    },
    "generic_name": {
      "type": "string",
      "description": "Generic name"
    },
    "brand_name": {
      "type": "string",
      "description": "Brand name"
    },
    "active_ingredient": {
      "type": "string",
      "description": "Active ingredient name"
    },
    "shortage_status": {
      "type": "string",
      "enum": ["Currently in Shortage", "Resolved", "Discontinued", "Available"],
      "description": "Current shortage status"
    },
    "shortage_designation": {
      "type": "string",
      "enum": ["Yes", "No"],
      "description": "Shortage designation"
    },
    "dosage_form": {
      "type": "string",
      "description": "Dosage form"
    },
    "count": {
      "type": "string",
      "description": "Field to group results by for counting"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 10,
      "description": "Maximum number of results to return (1-100)"
    },
    "skip": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of results to skip for pagination"
    }
  },
  "additionalProperties": false
}

