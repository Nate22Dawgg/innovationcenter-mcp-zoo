{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SEC Search Filings Input",
  "description": "Input schema for searching filings by keyword",
  "type": "object",
  "properties": {
    "keyword": {
      "type": "string",
      "description": "Keyword to search for in filings",
      "examples": ["artificial intelligence", "revenue", "acquisition"]
    },
    "form_type": {
      "type": "string",
      "description": "Optional form type filter",
      "examples": ["10-K", "10-Q", "8-K"]
    },
    "start_date": {
      "type": "string",
      "description": "Start date filter (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "end_date": {
      "type": "string",
      "description": "End date filter (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 20,
      "description": "Maximum number of results"
    }
  },
  "required": ["keyword"],
  "additionalProperties": false
}

