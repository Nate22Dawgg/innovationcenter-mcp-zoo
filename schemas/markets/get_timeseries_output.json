{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Markets Get Time Series Output",
  "description": "Output schema for financial markets time series data with OHLCV data",
  "type": "object",
  "properties": {
    "symbol": {
      "type": "string",
      "description": "Financial instrument symbol (ticker)"
    },
    "interval": {
      "type": "string",
      "description": "Data interval used (daily, weekly, or monthly)"
    },
    "period": {
      "type": "string",
      "description": "Time period requested (1m, 3m, 6m, 1y, 5y) or custom date range"
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "Start date of returned data (ISO 8601 format)"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "End date of returned data (ISO 8601 format)"
    },
    "count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of data points returned"
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date of the data point (ISO 8601: YYYY-MM-DD)"
          },
          "open": {
            "type": "number",
            "description": "Opening price"
          },
          "high": {
            "type": "number",
            "description": "Highest price"
          },
          "low": {
            "type": "number",
            "description": "Lowest price"
          },
          "close": {
            "type": "number",
            "description": "Closing price"
          },
          "volume": {
            "type": "integer",
            "minimum": 0,
            "description": "Trading volume"
          },
          "adj_close": {
            "type": "number",
            "description": "Adjusted closing price (if available)"
          }
        },
        "required": ["date", "open", "high", "low", "close", "volume"],
        "additionalProperties": false
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string",
          "description": "Currency of prices"
        },
        "data_source": {
          "type": "string",
          "description": "Source of the data (e.g., Yahoo Finance)"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "When the data was last updated"
        },
        "cache_status": {
          "type": "string",
          "enum": ["cached", "fresh"],
          "description": "Whether the data was served from cache or fetched fresh"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["symbol", "interval", "count", "data"],
  "additionalProperties": false
}

