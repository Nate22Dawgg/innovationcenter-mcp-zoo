{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NHANES Get Variable Info Input",
  "description": "Input schema for getting variable information",
  "type": "object",
  "required": ["dataset", "variable", "cycle"],
  "properties": {
    "dataset": {
      "type": "string",
      "description": "Dataset ID",
      "examples": ["demographics", "body_measures", "blood_pressure"]
    },
    "variable": {
      "type": "string",
      "description": "Variable name (e.g., 'RIDAGEYR', 'BMXBMI', 'BPXSY1')",
      "examples": ["RIDAGEYR", "BMXBMI", "BPXSY1", "RIAGENDR"]
    },
    "cycle": {
      "type": "string",
      "description": "Data cycle",
      "examples": ["2017-2018", "2019-2020", "2021-2022"]
    }
  },
  "additionalProperties": false
}

